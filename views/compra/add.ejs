<%- include ../layouts/header.ejs %>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading"><%= title %></div>
            <div class="panel-body">
                <form class="form-horizontal" action="/compra/add" method="POST">
                    <div class="form-group">
                            <label class="control-label col-sm-2" for="dtCompra">Data Compra</label>
                            <div class="col-sm-10">
                              <input type="text" class="form-control datepicker" name="dtCompra" id="dtCompra" placeholder="Data compra">
                            </div>
                        </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="location">Estabelecimento</label>
                        <div class="col-sm-10">
                          <select class="form-control" name="estabelecimento" id="estabelecimento">
                                <option value="">Selecione estabelecimento</option>
                            <% if (estabelecimentos) { %>
                                <% estabelecimentos.forEach(function(estabelecimento){ %>
                                    <option value="<%= estabelecimento.estabelecimentoId %>"> <%= estabelecimento.nmEstabelecimento %> </option>
                                <% }) %>
                            <% } %>         
                            
                          </select>
                        </div>
                    </div>

                    <div class="form-group"> 
                      <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="/compra"><button type="button" class="btn btn-default">Cancel</button></a>
                      </div>
                    </div>
                  </form>
            </div>
        </div>

    </div>
</div>

<%- include ../layouts/footer.ejs %>