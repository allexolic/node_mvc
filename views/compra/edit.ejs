<%- include ../layouts/header.ejs %>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading"><%= title %></div>
            <div class="panel-body">
                <form class="form-horizontal" action="/compra/edit/<%= compra[0].compraId %>" method="POST">
                    <div class="form-group">
                      <label class="control-label col-sm-2" for="nome">Nome</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control" name="nome" id="nome" placeholder="nome estabelecimento" 
                               value="<%= compra[0].nmEstabelecimento %>">
                      </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="dtCompra">Dt. compra</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="dtCompra" id="dtCompra" 
                                   placeholder="data compra" value="<%= compra[0].dtCompra %>"/>
                        </div>
                    </div>
                    <div class="form-group"> 
                      <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="/compra"><button type="button" class="btn btn-default">Cancel</button></a>
                      </div>
                    </div>
                  </form>
            </div>
        </div>

    </div>
</div>

<%- include ../layouts/footer.ejs %>